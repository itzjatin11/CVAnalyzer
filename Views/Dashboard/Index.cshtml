@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">📊 CV Analyzer Dashboard</h1>
        <p class="text-muted">Manage CV uploads, generate reports, and explore student skill clusters</p>
    </div>

    <!-- Upload Section -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-3 text-secondary">📁 Upload CVs</h5>
                    <label for="uploadDropdown" class="form-label fw-bold">Select upload option:</label>
                    <select id="uploadDropdown" class="form-select form-select-lg mb-3" onchange="navigateToUpload(this)">
                        <option selected disabled>-- Choose upload option --</option>
                        <option value="/Upload/Single">Upload Single CV</option>
                        <option value="/Upload/Bulk">Upload Bulk CVs</option>
                    </select>
                    <div class="text-muted small">You can upload individual or multiple CVs in PDF/DOCX format.</div>
                </div>
            </div>
        </div>

        <!-- Report Download -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title fw-semibold mb-3 text-secondary">📥 Download Cluster Report</h5>
                        <p class="text-muted">Generate an Excel file of all skill cluster groupings for analysis.</p>
                    </div>
                    <a href="/Reports/Cluster" class="btn btn-success btn-lg mt-3 w-100 shadow-sm">
                        <i class="bi bi-file-earmark-excel"></i> Download Excel Report
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Cluster Table -->
    <div class="card shadow-sm border-0 rounded-4 mt-5">
        <div class="card-header bg-primary text-white fw-semibold fs-5">
            🧑‍🤝‍🧑 Grouped Student Skill Clusters
        </div>
        <div class="card-body p-0">
            @if (Model.StudentClusters != null && Model.StudentClusters.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Cluster Name</th>
                                <th>Student ID</th>
                                <th>Student Name</th>
                                <th>Skills</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.StudentClusters)
                            {
                                <tr>
                                    <td>@c.ClusterName</td>
                                    <td>@c.StudentId</td>
                                    <td>@c.StudentName</td>
                                    <td>@c.Skills</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-muted text-center">No clustered students found yet. Upload CVs to generate clusters.</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function navigateToUpload(select) {
            const value = select.value;
            if (value) {
                window.location.href = value;
            }
        }
    </script>
}
